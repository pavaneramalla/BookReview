
<div class="col-md-6 col-md-offset-3">
   <div class="edit-review-form">
     <h1>Edit Review</h1>
     <%=simple_form_for ([@book, @review]) do |f|%>
     <div id="review-rating">
     <label>Rating:</label>
      </div>
     <%=f.input:comment%>
     <%=f.button:submit%>
   <%end%>
    </div>
</div>


<script>
$('#review-rating').raty({
path:'/assets/',
scoreName:'review[rating]'
});
</script>
